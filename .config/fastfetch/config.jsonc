{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": null,
    "display": {
        "key": {
            "type": "both",
            "paddingLeft": 2,
            "width": 17
        }
    },
    "modules": [
        {
            "type": "title",
            "format": "|-------------------------------------------------------|\u001b[40D: {#1}{user-name} @ {host-name}{#} :"
        },
        // "break",
        // {
        //     "type": "host",
        //     "keyColor": "green"
        // },
        {
            "type": "cpuusage",
            "keyColor": "green",
            "format": "{1}" 
        },
        {
            "type": "memory",
            "keyColor": "yellow"
        },
        {
            "type": "swap",
            "keyColor": "yellow"
        },
        {
            "type": "localip",
            "keyColor": "cyan",
            "compact": true
        },
        {
            "type": "wifi",
            "key": "Wifi",
            "keyColor": "cyan",
            "format": "{ssid} ({signal-quality})" 
        },
        {
            "type": "sound",
            "key": "Sound",
            "keyColor": "magenta",
            // "format": "{}%"
        },
        {
            "type": "battery",
            "key": "Battery", 
            "keyColor": "red",
            "format": "{capacity}% [{status}]" 
        },
        {
            "type": "custom",
            "keyIcon": "ï‚ ",
            "key": "Disks"
        },
        {
            "type": "disk",
            "key": " ",
            "format": "        [{mountpoint}] - {size-used} / {size-total} ({size-percentage})"
        },
        "break"
    ]
}
